{
    "intents": [
        {
            "tag": "greetings",
            "patterns": ["hello", "hey", "hi", "good day", "greetings", "what's up?", "howdy", "yo", "hi there", "hello there", "hey bot"],
            "responses": ["Hello!", "Hey!", "Hi there!", "Greetings!", "Howdy!", "Yo! How can I assist?", "What’s up?", "Hello there!"]
        },
        {
            "tag": "goodbye",
            "patterns": ["bye", "goodbye", "see you later", "take care", "catch you later", "farewell", "I’m leaving", "talk to you later"],
            "responses": ["Goodbye!", "Take care!", "See you later!", "Catch you later!", "Farewell!", "Have a great day!", "Talk to you soon!"]
        },
        {
            "tag": "gratitude",
            "patterns": ["thanks", "thank you", "appreciate it", "much obliged", "thx", "thanks a lot", "thanks so much", "I appreciate it", "many thanks"],
            "responses": ["You're welcome!", "No problem!", "Happy to help!", "Anytime!", "Glad to assist!", "You're always welcome!", "No worries!"]
        },
        {
            "tag": "bot_identity",
            "patterns": ["who are you?", "what is your name?", "tell me about yourself", "are you a bot?", "are you real?", "what do I call you?", "who made you?"],
            "responses": ["I am a chatbot here to assist you!", "I'm your virtual assistant!", "You can call me your AI assistant!", "I’m an AI-powered bot!", "I exist to help you!", "I was created to assist with various tasks!"]
        },
        {
            "tag": "user_identity",
            "patterns": ["who am I?", "what's my name?", "do you know me?", "can you recognize me?", "do you remember me?", "tell me about myself"],
            "responses": ["You're a valued user!", "I may not know your name, but I'm here to assist you!", "You're someone looking for answers!", "You are an awesome person!", "I recognize you as my user, and I’m happy to help!"]
        },
        {
            "tag": "weather",
            "patterns": ["what's the weather like?", "how's the weather today?", "will it rain today?", "is it sunny outside?", "tell me the forecast", "how cold is it today?", "what’s the temperature?"],
            "responses": ["I can check the weather for you. Where are you located?", "Let me fetch the latest weather report!", "It looks sunny today!", "It might rain later. Stay prepared!", "It’s quite chilly outside.", "I’ll need your location to provide the forecast."]
        },
        {
            "tag": "time",
            "patterns": ["what time is it?", "can you tell me the time?", "what's the current time?", "tell me the exact time", "do you know what time it is?", "what’s the time now?"],
            "responses": ["The current time is [TIME].", "It's [TIME] now!", "Let me check the time for you.", "The clock says it's [TIME]."]
        },
        {
            "tag": "date",
            "patterns": ["what's the date today?", "what day is it?", "tell me the current date", "do you know today's date?", "what’s the date now?"],
            "responses": ["Today's date is [DATE].", "It's [DATE] today!", "Let me check the date for you.", "According to the calendar, it's [DATE]."]
        },
        {
            "tag": "small_talk",
            "patterns": ["how are you?", "how's it going?", "are you okay?", "what's up?", "how are you feeling today?", "how’s life?", "everything good?"],
            "responses": ["I'm great, thanks for asking!", "Doing well! How about you?", "I'm here to assist you!", "Feeling awesome as always!", "I never get tired of chatting!"]
        },
        {
            "tag": "jokes",
            "patterns": ["tell me a joke", "make me laugh", "do you know any jokes?", "give me a funny joke", "say something funny", "got any good jokes?"],
            "responses": ["Why did the scarecrow win an award? Because he was outstanding in his field!", "I would tell you a chemistry joke, but I know I wouldn’t get a reaction.", "Why don’t skeletons fight each other? Because they don’t have the guts!"]
        },
        {
            "tag": "motivation",
            "patterns": ["motivate me", "I need inspiration", "give me a quote", "say something motivational", "help me feel better"],
            "responses": ["Believe in yourself! You are capable of amazing things.", "Keep pushing forward, success is on the way!", "Your hard work will pay off soon!", "Don’t give up, you’re closer than you think!"]
        },
        {
            "tag": "news",
            "patterns": ["tell me the news", "what's happening today?", "any latest updates?", "what’s in the headlines?", "give me some news"],
            "responses": ["Let me check the latest news for you!", "Here are today's headlines: [NEWS].", "Stay updated with today’s breaking news!", "I’ll fetch the latest news updates."]
        },
        {
            "tag": "sports",
            "patterns": ["what’s the latest sports news?", "who won the last match?", "give me sports updates", "tell me about football", "what’s happening in sports?"],
            "responses": ["Let me check the latest sports news for you!", "Here's what's happening in the sports world: [SPORTS UPDATE].", "Stay updated with recent sports results!", "I’ll fetch the latest sports updates."]
        },
        {
            "tag": "math",
            "patterns": ["solve this equation", "what is 2+2?", "calculate something for me", "do some math", "help me with a math problem"],
            "responses": ["Sure! What's the equation?", "I can calculate that for you!", "Let me do the math for you!", "Just give me the numbers, and I'll solve it!"]
        },
        {
            "tag": "definitions",
            "patterns": ["what does this word mean?", "define [WORD]", "give me a definition", "what is the meaning of [WORD]?"],
            "responses": ["[WORD] means [DEFINITION].", "Here’s the definition of [WORD]: [DEFINITION].", "Let me look that up for you!", "The meaning of [WORD] is [DEFINITION]."]
        },
        {
            "tag": "translation",
            "patterns": ["translate this", "how do you say [WORD] in Spanish?", "translate [WORD] to French", "give me a translation", "what’s the meaning in another language?"],
            "responses": ["[WORD] in [LANGUAGE] is [TRANSLATION].", "Here’s the translation: [TRANSLATION].", "Let me translate that for you!", "In [LANGUAGE], you would say [TRANSLATION]."]
        },
        {
            "tag": "general_assistance",
            "patterns": ["I need help", "can you assist me?", "help me please", "I have a problem", "can you guide me?"],
            "responses": ["Of course! What do you need help with?", "I'm here to assist you. How can I help?", "I’m happy to help. Just tell me what you need!"]
        },
        {
            "tag": "stock_information",
            "patterns": ["What is the stock price of {company}?", "Give me the latest stock price for {company}", "How is {company} performing in the stock market?", "Stock details for {company}", "Show me {company} stock price"],
            "responses": ["The current stock price of {company} is {price}.", "{company} is currently trading at {price}.", "The latest stock price of {company} is {price}. Would you like more details?"]
        },
        {
            "tag": "shutdown",
            "patterns": ["Exit", "Close the program", "Shutdown", "Quit", "End the session"],
            "responses": ["Shutting down... Goodbye!", "Closing the program. Have a great day!", "Exiting now. See you later!", "Program is shutting down."]
        }        
    ]
}
